<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.DescriptionProductFragment"
    android:background="@drawable/border_description_product">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:background="@color/colorGray"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/DescriptionProductFragment_ImageView_ImagenDelProducto"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:contentDescription="@string/imagen_del_producto"
            android:scaleType="centerCrop"
            android:src="@drawable/reloj_rolex"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/DescriptionProductFragment_TextView_NombreDelProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reloj_rolex_de_oro"
            android:layout_margin="16dp"
            android:textSize="20sp"
            android:textColor="@android:color/background_light"/>

        <TextView
            android:id="@+id/DescriptionProductFragment_TextView_PrecioDelProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/_45000"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textSize="20sp"
            android:textColor="@android:color/background_light"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>


</LinearLayout>